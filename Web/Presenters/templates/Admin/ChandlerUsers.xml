{extends "@layout.xml"}

{block title}
    Пользователи Chandler
{/block}

{block heading}
    Пользователи Chandler
{/block}

{block content}
<table class="aui aui-table-list">
    <thead>
        <tr>
            <th>ID</th>
            <th>Логин</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        <tr n:foreach="$users as $user">
            <td>
                <a href="/admin/chandler/users/{$user->getId()}">{$user->getId()}</a>
            </td>
            <td>{$user->getRaw()->login}</td>
            <td>
                <a class="aui-button aui-button-primary" href="/admin/chandler/users/{$user->getId()}">
                    <span class="aui-icon aui-icon-small aui-iconfont-new-edit">{_edit}</span>
                </a>
            </td>
        </tr>
    </tbody>
</table>
{/block}
